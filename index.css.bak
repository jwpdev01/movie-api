* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 62.5%;
}

/* iPhone 4 range */

@media (min-width:0px) and (max-width:480px) {
    html {
        font-size: 1.0em;
    }
}

/* larger than iPhone landscape, an in the iPad portrait range */

@media (min-width:481px) and (max-width:768px) {
    html {
        font-size: 1.1em;
    }
}

/* bigger than iPad portrait  */

@media (min-width:769px) {
    html {
        font-size: 1.2em;
    }
}

body {
    background-color: #053d70;
    font-family: "Roboto", sans-serif;
    color: #E0FFFF;
}

header {
    margin-top: 20px;
}

legend {
    display: block;
    width: 100%;
    text-align: center;
}

input[type='text'] {
    width: 90%;
    padding: 10px;
    margin: 10px 35px 5px 35px;
}

fieldset {
    border: 0px;
}

img {
    margin: 20px 0;
}

.title {
    font-size: .8em;
    text-align: center;
}

.movie-container {
    margin-top: 20px;
}

.video-container {
    margin-top: 80px;
}

ul {
    text-align: center;
    margin-top: 20px;
}

li {
    display: inline;
    list-style: none;
    padding-right: 20px;
}

.movie-title {
    width: 100%;
    text-align: center;
}

.movie-description {
    text-align: center;
    padding: 0 20px;
}

.movie-actors {
    color: #cf9d6b;
}

.thumb {
    border: 2px solid gold;
}

.error {
    margin-top: 40px;
    text-align: center;
    color: white;
    font-size: 3em;
    font-weight: bold;
}

.thumb {
    display: block;
    margin: 0 auto;
    width: 50%;
}

.js-poster {
    display: block;
    margin: 0 auto;
    width: 50%;
}

button {
    display: inline-block;
    padding: 10px;
    border-radius: 5px;
    background-color: white;;
    color: black;
}